<Window x:Class="practX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practX"
        mc:Ignorable="d"
        Title="Who?" Height="250" Width="400">
    <Grid>
        <Button Content="Найти выжившего" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="16"/>
        <TextBox x:Name="_in" HorizontalAlignment="Left" Height="26" Margin="262,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="77" FontSize="16" TextChanged="_in_TextChanged"/>
        <TextBox x:Name="_out" HorizontalAlignment="Left" Height="26" Margin="258,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="81" FontSize="16" IsReadOnly ="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,62,0,0" Text="Введите количество элементов:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,138,0,0" Text="Номер победившего элемента:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
